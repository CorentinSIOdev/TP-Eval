{% extends 'base.html.twig' %}

{% block title %}leboncoin | Détails de : {{ titre }} {% endblock %}

{% block body %}
    <div class="details_annonce_card">
        <h1>Détails de l'annonce {{ titre }}</h1>

        <div class="annonces_box">
            <div class="img_annonce">
                <img src="{{ asset('assets/images/image-notfound.webp') }}"></img>
            </div>
            <div class="details">
                <div class="prix_annonce">
                    Prix : {{ prix }} €
                </div>

                <div class="desc_annonce">
                    Description : {{ desc }}
                </div>

                <div class="cat_annonce">
                    Catégorie : {{ cat.title }}
                </div>

                <div class="user_annonce">
                    Utilisateur : {{ user.username }}
                </div>

                <div class="date_annonce">
                    Date de publication : {{ date_create.format('d/m/Y') }}
                </div>

                <div class="date_annonce">
                    Date de modification : {{ date_update.format('d/m/Y') }}
                </div>

                {% if app.user is not null %}
                    {% if app.user.id == user.id %}
                        <div class="buttons_interraction">
                            <a><button class="button_update">Mettre à jour</button></a>
                            <a href="{{ path("route_delete_annonce", {id: idAnnonce}) }}"><button class="button_delete">Supprimer</button></a>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
