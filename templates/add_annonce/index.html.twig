{% extends 'base.html.twig' %}

{% block title %}leboncoin | Cr√©er une annonce{% endblock %}

{% block body %}
    <div class="add_annonce">
        <h1>Ajouter une annonce</h1>

        {{ form_start(form) }}
            <div class="titre">
                {{ form_label(form.title, "Titre de l'annonce") }}
            </div>
            {{ form_widget(form.title) }}
            
            <div class="titre">
                {{ form_label(form.description, "Description de l'annonce") }}
            </div>
            {{ form_widget(form.description) }}
            
            <div class="titre">
                {{ form_label(form.price, "Prix du produit") }}
            </div>
            {{ form_widget(form.price) }}

            <button type="submit" class="btn">Ajouter l'annonce</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
